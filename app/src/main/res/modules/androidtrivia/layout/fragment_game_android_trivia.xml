<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.navigation.InGame">

    <data>

        <variable
            name="game"
            type="com.mobileapp.learnkotlin.codelabs.androidtrivia.screens.GameFragment" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/questionImage"
                android:layout_width="0dp"
                android:layout_height="@dimen/android_trivia_image_header_height"
                android:layout_marginStart="@dimen/android_trivia_horizontal_margin"
                android:layout_marginTop="@dimen/android_trivia_vertical_margin"
                android:layout_marginEnd="@dimen/android_trivia_horizontal_margin"
                android:layout_marginBottom="@dimen/android_trivia_vertical_margin"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toTopOf="@+id/questionText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                app:srcCompat="@drawable/ic_android_category_simple_android_trivia" />

            <TextView
                android:id="@+id/questionText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/android_trivia_question_horizontal_margin"
                android:layout_marginTop="@dimen/android_trivia_vertical_margin"
                android:layout_marginEnd="@dimen/android_trivia_question_horizontal_margin"
                android:layout_marginBottom="@dimen/android_trivia_vertical_margin"
                android:fontFamily="sans-serif"
                android:text="@{game.currentQuestion.text}"
                android:textSize="@dimen/android_trivia_question_text_size"
                android:textStyle="bold"
                android:typeface="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/questionImage"
                tools:text="What color is the Android mascot?" />

            <RadioGroup
                android:id="@+id/questionRadioGroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/android_trivia_question_horizontal_margin"
                android:layout_marginTop="@dimen/android_trivia_vertical_margin"
                android:layout_marginEnd="@dimen/android_trivia_question_horizontal_margin"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/questionText">

                <RadioButton
                    android:id="@+id/firstAnswerRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/android_trivia_question_vertical_margin"
                    android:checked="true"
                    android:text="@{game.answers[0]}"
                    android:textSize="@dimen/android_trivia_answer_text_size"
                    tools:text="Blue" />

                <RadioButton
                    android:id="@+id/secondAnswerRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/android_trivia_question_vertical_margin"
                    android:text="@{game.answers[1]}"
                    android:textSize="@dimen/android_trivia_answer_text_size"
                    tools:text="Green" />

                <RadioButton
                    android:id="@+id/thirdAnswerRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/android_trivia_question_vertical_margin"
                    android:text="@{game.answers[2]}"
                    android:textSize="@dimen/android_trivia_answer_text_size"
                    tools:text="Yellow" />

                <RadioButton
                    android:id="@+id/fourthAnswerRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{game.answers[3]}"
                    android:textSize="@dimen/android_trivia_answer_text_size"
                    tools:text="Red" />
            </RadioGroup>

            <Button
                android:id="@+id/submitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/android_trivia_question_horizontal_margin"
                android:layout_marginTop="@dimen/android_trivia_vertical_margin"
                android:layout_marginEnd="@dimen/android_trivia_question_horizontal_margin"
                android:text="@string/android_trivia_submit_button"
                android:textSize="@dimen/android_trivia_button_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/questionRadioGroup" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>